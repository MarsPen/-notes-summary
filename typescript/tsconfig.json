{

  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES5",
    "outDir":"build/",
    "baseUrl":  "https://test.file.com",
    "noImplicitAny":true,
    "removeComments":true,
    "preserveConstEnums":true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "module": "commonjs",
    "watch": true,
    
  },
  "include": [
    "test.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "build", 
    "mock"
  ],
  "lib": [
    "es2017",
    "dom"
  ]
}